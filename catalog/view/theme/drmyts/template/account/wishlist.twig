{{ header }}

{% import "drmyts/template/macro/macros.twig" as macros %}
{% import "drmyts/template/macro/sidemenu.twig" as menus %}
{% import "drmyts/template/macro/sections.twig" as sections %}

<main id="content">
    {{ content_top }}
    {{ sections.pageTitle(heading_title, breadcrumbs) }}

	<section class="account">
		<div class="container account__container">
            {{ menus.accountMenu(edit, text_edit, wishlist, text_wishlist_nav, order, text_order, password_change, text_password_page, logout, text_logout, 'wishlist') }}

			<div class="account__content">
				<h2 class="account__subtitle text--size_h3-full">{{ text_wishlist_nav }} {% if products|length > 0 %}<span class="text--color_gray">({{ products|length }})</span>{% endif %}</h2>
                {% if products %}
                    <div class="wishlist flex-col">
                        {% for product in products %}
						<div class="cart-item wishlist__item cart-item--type_wishlist d-flex">
                            {% if product.thumb %}
    							<div class="cart-item__img">
    								<picture>
    									<img class="contain-image" src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" loading="lazy" width="56" height="56">
                                    </picture>
    								<a class="cart-item__link abs inset wh-full" href="{{ product.href }}">{{ product.name }}</a>
    							</div>
                            {% endif %}
							<div class="cart-item__content">
								<div class="cart-item__details flex-col">
									<a class="cart-item__title" href="{{ product.href }}">{{ product.name }}</a>
									<span class="cart-item__type">{{ product.model }}</span>
									<div class="product-price cart-item__price flex-row {% if product.special %} product-price--sale {% endif %}">
										<span class="product-price__full">{{ product.price }}</span>
                                        {% if product.special %}
                                            <span class="product-price__sale">{{ product.special }}</span>
                                        {% endif %}
									</div>
								</div>
								<div class="cart-item__footer flex-row-wrap j-end">
									<a href="{{ product.remove }}" class="btn flex-center icon cart-item__delete">
                                        {{ macros.svg('delete', '' )}}
									</a>
								</div>
							</div>
						</div>
                        {% endfor %}
					</div>
                {% else %}
    				<div class="account-empty text--center flex-center flex-col">
    					<h3 class="account-empty__title">{{ text_empty }}</h3>
    					<p> {{ text_wishlist_before_icon}}
                        <span class="icon icon--arrow">
                            {{ macros.svg('heart', '') }}
    					</span>
                        {{ text_wishlist_after_icon }}</p>
    				</div>
                {% endif %}
			</div>
		</div>
	</section>
    {{ content_bottom }}
</main>
{{ footer }}
