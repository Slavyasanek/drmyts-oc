{% macro recursiveItems(menu_items, module_layouts, languages, config_language_id, store_id, 
    translated_text, item_placeholder, item_id = '') %}

    {% for key_item, menu_item in menu_items %}
        {% if item_id is empty %}
            {% set item_id_prev = '' %}
            {% set item_id = key_item %}
        {% else %}
            {% set item_id_prev = item_id %}
            {% set item_id = item_id ~ '_' ~ key_item %}
        {% endif %}

        <div id="catalog-store_{{ store_id }}-item-{{ item_id }}" class="form-group module-menu_item_wrap" data-title="{% if menu_item['data']['title'] is defined and menu_item['data']['title']|length %}{{ menu_item['data']['title'] }}{% else %}{{ translated_text['note_title_empty'] }}{% endif %}" data-row="{{ key_item }}" data-id="{{ menu_item['data']['id'] }}" data-layout="{{ menu_item['data']['layout'] }}">
            <div class="module-dmenu_editor-item {% if menu_item['data']['status'] %}enabled{% else %}disabled{% endif %}">
                <div class="text-left module-dmenu_editor-item_title">
                    {% if menu_item['data']['layout'] in module_layouts|keys %}
                        <span class="text" title="{% if menu_item['data']['title'] is defined and menu_item['data']['title']|length %}{{ menu_item['data']['title'] }}{% else %}{{ translated_text['note_title_empty'] }}{% endif %}">{% if menu_item['data']['names']['language_' ~ config_language_id] is defined and menu_item['data']['names']['language_' ~ config_language_id]|length %}{{ menu_item['data']['names']['language_' ~ config_language_id] }}{% else %}{{ translated_text['note_title_empty'] }}{% endif %}</span>
                    {% else %}
                        <span class="text">{{ translated_text['text_item_desc_none'] }}</span>
                    {% endif %}

                    {% if menu_item['extra']['saved']['status'] %}
                        <span class="icon-saved">
                            <i class="fa fa-save"></i>
                        </span>
                    {% endif %}

                    <span class="buttons">
                        {% if menu_item['data']['layout'] in module_layouts|keys %}
                            <span class="notice">{{ module_layouts[menu_item.data.layout] }}</span>
                        {% else %}
                            <span class="notice">{{ translated_text['text_item_desc_none'] }}</span>
                        {% endif %}

                        <a href="{{ menu_item['data']['url']['link'] }}" class="a_item_href" target="_blank">
                            <i class="fa fa-eye fa_item_href {% if not menu_item['extra']['saved']['fields']['status'] %}disabled{% endif %}" data-toggle="tooltip" title="{{ translated_text['button_look_tip'] }}"></i>
                        </a>

                        <i class="fa fa-bar-chart fa_children_download {% if menu_item['extra']['total'] %}has-children{% endif %}" {% if menu_item['extra']['total'] %}data-toggle="tooltip" title="{{ translated_text['button_download_item_tip'] }}"{% endif %}></i>

                        <i class="fa fa-angle-down fa_arrow_open" data-toggle="tooltip" title="{{ translated_text['button_edit_item_tip'] }}"></i>
                    </span>
                </div>

                <div class="module-dmenu_editor-item_content" style="display: none;">
                    {% if menu_item['extra']['saved']['status'] %}
                        <div class="field field-title_saved">
                            <label class="col-sm-2 control-label"></label>

                            <div class="col-sm-10 field-content">
                                <div class="name-title_saved">{% if menu_item['data']['title'] is defined and menu_item['data']['title']|length %}{{ menu_item['data']['title'] }}{% else %}{{ translated_text['note_title_empty'] }}{% endif %}</div>
                            </div>
                        </div>
                    {% endif %}

                    <div class="field required">
                        <label class="col-sm-2 control-label" for="catalog-store_{{ store_id }}-item-{{ item_id }}-data-names_{{ config_language_id }}">{{ translated_text['entry_name_category'] }}</label>

                        <div class="col-sm-10 field-content module-dmenu_editor-item_title_languages">
                            {% for language in languages %}
                                <div class="input-group pull-left input-name input-name_{{ language['language_id'] }}">
                                    <span class="input-group-addon">
                                        <img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" />
                                    </span>

                                    <input type="text" id="catalog-store_{{ store_id }}-item-{{ item_id }}-data-names_{{ language['language_id'] }}" class="form-control name_{{ language['language_id'] }}" data-field="names" data-language="{{ language['language_id'] }}" data-title="{% if menu_item['extra']['saved']['fields']['names']['language_' ~ language.language_id] is defined %}{{ menu_item['extra']['saved']['fields']['names']['language_' ~ language.language_id] }}{% endif %}" value="{% if menu_item['data']['names']['language_' ~ language.language_id] is defined %}{{ menu_item['data']['names']['language_' ~ language.language_id] }}{% endif %}" required />
                                </div>

                                {% if menu_item['error']['names']['language_' ~ language.language_id] is defined %}
                                    <div class="text-danger">{{ menu_item['error']['names']['language_' ~ language.language_id] }}</div>
                                {% endif %}
                            {% endfor %}

                            <div class="input-group pull-left">
                                <div class="form-check checkbox">
                                    <label for="catalog-store_{{ store_id }}-item-{{ item_id }}-data-names_hide">
                                        <input type="checkbox" id="catalog-store_{{ store_id }}-item-{{ item_id }}-data-names_hide" class="form-check-input names_hide" data-field="names_hide" value="1"{% if menu_item['data']['names_hide'] %} checked="checked"{% endif %} /> {{ translated_text['entry_name_hide_category'] }}
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field">
                        <label class="col-sm-2 control-label" for="catalog-store_{{ store_id }}-item-{{ item_id }}-data-target">{{ translated_text['entry_target'] }}</label>

                        <div class="col-sm-10 field-content module-dmenu_editor-item_field">
                            <select id="catalog-store_{{ store_id }}-item-{{ item_id }}-data-target" class="form-control" data-field="target">
                                <option value="" {% if menu_item['data']['target'] == '' %} selected{% endif %}>{{ translated_text['text_select_none'] }}</option>
                                <option value="_self" {% if menu_item['data']['target'] == '_self' %} selected{% endif %}>{{ translated_text['text_target_self'] }}</option>
                                <option value="_blank" {% if menu_item['data']['target'] == '_blank' %} selected{% endif %}>{{ translated_text['text_target_blank'] }}</option>
                                <option value="_parent" {% if menu_item['data']['target'] == '_parent' %} selected{% endif %}>{{ translated_text['text_target_parent'] }}</option>
                                <option value="_top" {% if menu_item['data']['target'] == '_top' %} selected{% endif %}>{{ translated_text['text_target_top'] }}</option>
                            </select>
                        </div>
                    </div>

                    <div class="field">
                        <label class="col-sm-2 control-label" for="catalog-store_{{ store_id }}-item-{{ item_id }}-data-xfn">{{ translated_text['entry_xfn'] }}</label>

                        <div class="col-sm-10 field-content module-dmenu_editor-item_field">
                            <input id="catalog-store_{{ store_id }}-item-{{ item_id }}-data-xfn" class="form-control" data-field="xfn" value="{{ menu_item['data']['xfn'] }}" />
                        </div>
                    </div>

                    <div class="field">
                        <label class="col-sm-2 control-label" for="catalog-store_{{ store_id }}-item-{{ item_id }}-data-class">{{ translated_text['entry_class'] }}</label>

                        <div class="col-sm-10 field-content module-dmenu_editor-item_field">
                            <input id="catalog-store_{{ store_id }}-item-{{ item_id }}-data-class" class="form-control" data-field="class" value="{{ menu_item['data']['class'] }}" />
                        </div>
                    </div>

                    <div class="field">
                        <label class="col-sm-2 control-label">{{ translated_text['entry_icon'] }}</label>

                        <div class="col-sm-10 field-content module-dmenu_editor-item_field">
                            <a href="" id="catalog-store_{{ store_id }}-item-{{ item_id }}-data-icon-thumb" data-toggle="image" class="img-thumbnail module_dmenu_editor-placeholder">
                                <img src="{% if menu_item['data']['icon']['thumb'] is defined %}{{ menu_item['data']['icon']['thumb'] }}{% else %}{{ item_placeholder }}{% endif %}" alt="{{ translated_text['entry_icon'] }}" title="{{ translated_text['entry_icon'] }}" data-placeholder="{{ item_placeholder }}">
                            </a>
                            <input type="hidden" value="{% if menu_item['data']['icon']['image'] is defined %}{{ menu_item['data']['icon']['image'] }}{% endif %}" id="catalog-store_{{ store_id }}-item-{{ item_id }}-data-icon-image" class="hidden" data-field="icon_image" />
                        </div>
                    </div>

                    <div class="field">
                        <label class="col-sm-2 control-label" for="catalog-store_{{ store_id }}-item-{{ item_id }}-data-status">{{ translated_text['entry_status'] }}</label>

                        <div class="col-sm-10 field-content module-dmenu_editor-item_field">
                            <select id="catalog-store_{{ store_id }}-item-{{ item_id }}-data-status" class="form-control field-status" data-status="{{ menu_item['extra']['saved']['fields']['status'] }}" data-field="status" {% if not menu_item['extra']['saved']['fields']['status'] %}disabled{% endif %}>
                                {% if menu_item['data']['status'] %}
                                    <option value="1" selected="selected">{{ translated_text['text_enabled'] }}</option>
                                    <option value="0">{{ translated_text['text_disabled'] }}</option>
                                {% else %}
                                    <option value="1">{{ translated_text['text_enabled'] }}</option>
                                    <option value="0" selected="selected">{{ translated_text['text_disabled'] }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>

                    <div class="field catalog-item-buttons">
                        <div class="text-right col-sm-12">
                            <span class="message"></span>
                            <button type="button" id="button-catalog-store_{{ store_id }}-item-{{ item_id }}-save" class="btn btn-success rounded-0 button-catalog-item-save" data-meaning="save">
                                <i class="fa fa-save"></i>
                                <span>{{ translated_text['button_save_item_catalog'] }}</span>
                            </button>
                            <button type="button" id="button-catalog-store_{{ store_id }}-item-{{ item_id }}-remove" class="btn btn-warning rounded-0 button-catalog-item-remove" data-meaning="remove">
                                <i class="fa fa-trash-o"></i>
                                <span>{{ translated_text['button_clear_item_catalog'] }}</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="module-dmenu_editor-item_content_sortable">
                <div id="module_menu_catalog_store_{{ store_id }}_nested_sortable-{{ item_id }}" class="module-menu_items_wrap_content"></div>
            </div>
        </div>

        {% set item_id = item_id_prev %}
    {% endfor %}
{% endmacro %}