{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">
    {% if error_warning %}<div class="alert alert-danger">{{ error_warning }}</div>{% endif %}
    <div class="panel panel-default">
      <div class="panel-body">
        <form action="{{ action }}" method="post" id="form-module" class="form-horizontal">
          
          <div class="form-group required">
            <label class="col-sm-2 control-label">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" class="form-control" />
              {% if error_name %}<div class="text-danger">{{ error_name }}</div>{% endif %}
            </div>
          </div>

          <hr>
          <h4>{{ help_text_content }}</h4>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_title_main }}</label>
            <div class="col-sm-10">
              <input type="text" name="title_main" value="{{ title_main }}" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_title_accent }}</label>
            <div class="col-sm-10">
              <input type="text" name="title_accent" value="{{ title_accent }}" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_description }}</label>
            <div class="col-sm-10">
              <textarea name="description" class="form-control" rows="3">{{ description }}</textarea>
            </div>
          </div>

          <hr>
          <h4>{{ help_insta_settings }}</h4>
          <div class="form-group required">
            <label class="col-sm-2 control-label">{{ entry_token }}</label>
            <div class="col-sm-10">
              <input type="text" name="insta_token" value="{{ insta_token }}" class="form-control" />
              {% if error_token %}<div class="text-danger">{{ error_token }}</div>{% endif %}
            </div>
          </div>
          
          <div class="form-group required">
            <label class="col-sm-2 control-label">{{ entry_account_id }}</label>
            <div class="col-sm-10">
              <input type="text" name="insta_account_id" value="{{ insta_account_id }}" class="form-control" />
              {% if error_account_id %}<div class="text-danger">{{ error_account_id }}</div>{% endif %}
              <small class="text-muted">{{ help_account_id }}</small>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_limit }}</label>
            <div class="col-sm-10">
              <input type="number" name="insta_limit" value="{{ insta_limit }}" class="form-control" />
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_link }}</label>
            <div class="col-sm-10">
              <input type="text" name="btn_link" value="{{ btn_link }}" class="form-control" />
            </div>
          </div>
          
            <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                <option value="1" {{ status == 1 ? 'selected="selected"' : '' }}>{{ text_enabled }}</option>
                <option value="0" {{ status == 0 ? 'selected="selected"' : '' }}>{{ text_disabled }}</option>
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}