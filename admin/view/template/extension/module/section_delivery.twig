{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" tle="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>{% endif %}
    <div class="panel panel-default">
      <div class="panel-body">
        <form action="{{ action }}" method="post" id="form-module" class="form-horizontal" enctype="multipart/form-data">
          <div class="form-group required">
            <label class="col-sm-2 control-label">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="name" value="{{ name }}" class="form-control" />
              {% if error_name %}<div class="text-danger">{{ error_name }}</div>{% endif %}
            </div>
          </div>

          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-delivery" data-toggle="tab">{{ tab_delivery }}</a></li>
            <li><a href="#tab-payment" data-toggle="tab">{{ tab_payment }}</a></li>
            <li><a href="#tab-extra" data-toggle="tab">{{ tab_extra }}</a></li>
          </ul>

          <div class="tab-content">
            <div class="tab-pane active" id="tab-delivery">
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_title }}</label>
                <div class="col-sm-10"><input type="text" name="delivery_block_title" value="{{ delivery_block_title }}" class="form-control" /></div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_content }}</label>
                <div class="col-sm-10">
                  <textarea name="delivery_block_content" id="input-delivery-content" data-toggle="summernote" class="form-control">{{ delivery_block_content }}</textarea>
                </div>
              </div>
            </div>

            <div class="tab-pane" id="tab-payment">
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_title }}</label>
                <div class="col-sm-10"><input type="text" name="payment_block_title" value="{{ payment_block_title }}" class="form-control" /></div>
              </div>
              <table id="payments" class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <td class="text-left" style="width: 30%;">{{ entry_icon }}</td>
                    <td class="text-left">{{ entry_text }}</td>
                    <td></td>
                  </tr>
                </thead>
                <tbody>
                  {% set payment_row = 0 %}
                  {% for payment in payments %}
                  <tr id="payment-row{{ payment_row }}">
                    <td class="text-left">
                      <select name="payments[{{ payment_row }}][icon]" class="form-control">
                        <option value="credit-card" {{ payment.icon == 'credit-card' ? 'selected' : '' }}>Credit Card</option>
                        <option value="np" {{ payment.icon == 'np' ? 'selected' : '' }}>Nova Poshta</option>
                        <option value="apple-pay" {{ payment.icon == 'apple-pay' ? 'selected' : '' }}>Apple/Google Pay</option>
                      </select>
                    </td>
                    <td class="text-left">
                      <input type="text" name="payments[{{ payment_row }}][text]" value="{{ payment.text }}" class="form-control" />
                    </td>
                    <td class="text-left"><button type="button" onclick="$('#payment-row{{ payment_row }}').remove();" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
                  </tr>
                  {% set payment_row = payment_row + 1 %}
                  {% endfor %}
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="2"></td>
                    <td class="text-left"><button type="button" onclick="addPayment();" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                  </tr>
                </tfoot>
              </table>
            </div>

            <div class="tab-pane" id="tab-extra">
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_title }}</label>
                <div class="col-sm-10"><input type="text" name="text_block_title" value="{{ text_block_title }}" class="form-control" /></div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_content }}</label>
                <div class="col-sm-10">
                  <textarea name="text_block_content" id="input-text-content" data-toggle="summernote" class="form-control">{{ text_block_content }}</textarea>
                </div>
              </div>
            </div>
          </div>

          <hr />
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                <option value="1" {{ status == 1 ? 'selected="selected"' : '' }}>{{ text_enabled }}</option>
                <option value="0" {{ status == 0 ? 'selected="selected"' : '' }}>{{ text_disabled }}</option>
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="view/javascript/summernote/summernote.js"></script>
<link href="view/javascript/summernote/summernote.css" rel="stylesheet" />
<script type="text/javascript" src="view/javascript/summernote/summernote-image-attributes.js"></script>
<script type="text/javascript" src="view/javascript/summernote/opencart.js"></script>

<script type="text/javascript"></script>
<script type="text/javascript">
var payment_row = {{ payment_row }};

function addPayment() {
    html  = '<tr id="payment-row' + payment_row + '">';
    html += '  <td class="text-left">';
    html += '    <select name="payments[' + payment_row + '][icon]" class="form-control">';
    html += '      <option value="credit-card">Credit Card</option>';
    html += '      <option value="np">Nova Poshta</option>';
    html += '      <option value="apple-pay">Apple/Google Pay</option>';
    html += '      <option value="cash">Cash</option>';
    html += '    </select>';
    html += '  </td>';
    html += '  <td class="text-left"><input type="text" name="payments[' + payment_row + '][text]" value="" class="form-control" /></td>';
    html += '  <td class="text-left"><button type="button" onclick="$(\'#payment-row' + payment_row + '\').remove();" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
    html += '</tr>';

    $('#payments tbody').append(html);
    payment_row++;
}
</script>
{{ footer }}