{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          
            <div class="form-group">
                <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
                <div class="col-sm-10">
                    <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                    {% if error_name %}
                    <div class="text-danger">{{ error_name }}</div>
                    {% endif %}
                </div>
          </div>    

          <hr>

          <h4>{{ help_main_block }}</h4>
          
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_accent_title }}</label>
            <div class="col-sm-10">
                <input type="text" name="title_accent" value="{{ title_accent }}" class="form-control" placeholder="Експертно" />
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_title }}</label>
            <div class="col-sm-10">
                <textarea name="title_main" class="form-control" rows="3">{{ title_main }}</textarea>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_photo }}</label>
            <div class="col-sm-10">
              <a href="" id="thumb-image" data-toggle="image" class="img-thumbnail">
                <img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                </a>
              <input type="hidden" name="image" value="{{ image }}" id="input-image" />
              {% if error_image %}<div class="text-danger">{{ error_image }}</div>{% endif %}
            </div>
          </div>

          <hr>
          <h4>{{ help_badges }}</h4>
          <div class="well">
            {% for i in 1..3 %}
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_badge }}{{ i }}</label>
              <div class="col-sm-10"><input type="text" name="badge_text_{{ i }}" value="{{ attribute(_context, 'badge_text_' ~ i) }}" class="form-control" placeholder="{{ help_text_badge_plaсeholder }}" /></div>
            </div>
            {% endfor %}
          </div>

          <hr>
          <h4>{{ help_card }}</h4>
          {% for i in 1..3 %}
          <div class="well">
            <h5>{{ entry_card }}{{ i }}</h5>
            <div class="form-group">
              <label class="col-sm-2 control-label">{{ entry_card_icon }}</label>
              <div class="col-sm-2">
                  <select name="card_icon_{{ i }}" class="form-control">
                    {# Отримуємо поточне значення іконки для цієї картки #}
                    {% set current_icon = attribute(_context, 'card_icon_' ~ i) %}
                    
                    <option value="note" {% if current_icon == 'note' %}selected="selected"{% endif %}>{{ help_icon_note }}</option>
                    <option value="user-add" {% if current_icon == 'user-add' %}selected="selected"{% endif %}>{{ help_icon_user }}</option>
                    <option value="location" {% if current_icon == 'location' %}selected="selected"{% endif %}>{{ help_icon_location }}</option>
                  </select>
                </div>
              
              <label class="col-sm-1 control-label">{{ entry_card_number }}</label>
              <div class="col-sm-2"><input type="text" name="card_num_{{ i }}" value="{{ attribute(_context, 'card_num_' ~ i) }}" class="form-control" placeholder="4+" /></div>
              
              <label class="col-sm-1 control-label">{{ entry_card_text }}</label>
              <div class="col-sm-4"><input type="text" name="card_text_{{ i }}" value="{{ attribute(_context, 'card_text_' ~ i) }}" class="form-control" /></div>
            </div>
          </div>
          {% endfor %}

          <hr>
          <h4>{{ help_buttons_block }}</h4>
          <div class="row">
            <div class="col-sm-6">
              <h5>{{ help_red_button }}</h5>
              <div class="form-group">
                <label class="col-sm-4 control-label">{{ help_btn_text }}</label>
                <div class="col-sm-8"><input type="text" name="red_button_text" value="{{ red_button_text }}" class="form-control" />
                {% if error_red_button_text %}<div class="text-danger">{{ error_red_button_text }}</div>{% endif %}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-4 control-label">{{ help_btn_url }}</label>
                <div class="col-sm-8"><input type="text" name="red_button_link" value="{{ red_button_link }}" class="form-control" /></div>
              </div>
            </div>
            <div class="col-sm-6">
              <h5>{{ help_black_button }}</h5>
              <div class="form-group">
                <label class="col-sm-4 control-label">{{ help_btn_text }}</label>
                <div class="col-sm-8"><input type="text" name="black_button_text" value="{{ black_button_text }}" class="form-control" />
                    {% if error_black_button_text %}<div class="text-danger">{{ error_black_button_text }}</div>{% endif %}
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-4 control-label">{{ help_btn_url }}</label>
                <div class="col-sm-8"><input type="text" name="black_button_link" value="{{ black_button_link }}" class="form-control" /></div>
              </div>
            </div>
          </div>

          <hr>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="status" id="input-status" class="form-control">
                <option value="1" {{ status == 1 ? 'selected="selected"' : '' }}>{{ text_enabled }}</option>
                <option value="0" {{ status == 0 ? 'selected="selected"' : '' }}>{{ text_disabled }}</option>
              </select>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}